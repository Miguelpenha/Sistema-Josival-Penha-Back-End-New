<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet"/>
</head>
<body style="padding: 1%;font-family: 'Roboto', sans-serif;">
    <header>
        <h1 style="margin-top: 2%;font-size: 2.5vw;text-align: center;">Aviso do Instituto Educacional Josival Penha</h1>
    </header>
    <hr>
    <span style="margin: 1%;font-size: 2vw;">{{{msg}}}</span>
    {{#if attachments.length}}
        <section style="padding-left: 1%;padding-bottom: 1%;border-radius: 10px;">
            <h2 style="padding-top: 2%;font-size: 2vw;">Anexos</h2>
            <ul style="list-style: none;padding: 0;">
                {{#each attachments}}
                    <li style="padding: 0.2%;padding-left: 1%;">
                        <a style="font-size: 1.5vw;" href="{{this}}">{{this}}</a>
                    </li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <footer>
        <h4 style="font-size: 1.8vw;">Atenciosamente, Secret√°ria Josival Penha</h4>
    </footer>
</body>